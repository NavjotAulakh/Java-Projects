<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.uoit.projectxiphos">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="ca.uoit.projectxiphos.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".UserPanel"
            android:label="User Panel"
            android:parentActivityName="ca.uoit.projectxiphos.MainActivity"
            >
            <meta-data
                android:name="android.support.MainActivity"
                android:value="ca.uoit.projectxiphos.MainActivity" />
        </activity>

        <activity android:name=".GuestMode"
            android:label="Guest Mode"
            android:parentActivityName="ca.uoit.projectxiphos.MainActivity"
            >
        <meta-data
            android:name="android.support.MainActivity"
            android:value="ca.uoit.projectxiphos.MainActivity" />
        </activity>

        <activity android:name=".Register"
            android:label="Register"
            android:parentActivityName="ca.uoit.projectxiphos.MainActivity"
            >
            <meta-data
                android:name="android.support.MainActivity"
                android:value="ca.uoit.projectxiphos.MainActivity" />
        </activity>

    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
</manifest>